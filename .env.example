# Database
DATABASE_URL=postgresql://username:password@localhost:5432/aiplc

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Session
SESSION_SECRET=your-random-session-secret-change-in-production

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Backend URL (for OAuth callbacks)
BACKEND_URL=http://localhost:3001

# Environment
NODE_ENV=development
PORT=3001

# PDF Processing (optional, defaults to /tmp/processing)
PROCESSING_DIR=/tmp/processing

# Vector Search (cosine distance threshold: 0-2, lower = more similar)
# 0.5 = very strict, 1.5 = more lenient
SIMILARITY_THRESHOLD=1.5

# Frontend (Vite uses VITE_ prefix, not REACT_APP_)
VITE_API_URL=http://localhost:3001
